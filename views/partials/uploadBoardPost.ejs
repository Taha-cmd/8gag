<h3 class="text-center"> Add a new Post <i class="fas fa-upload"></i></h3>
<hr>
<br><br>

<form action="/uploadBoardPost" method="post" encType="multipart/form-data">
    <div class="form-group col-10 offset-1">
        <label for="post_content">Post content: </label>
        <textarea class="form-control" id="post_content" name="post_content" rows="3"></textarea>
		<input class="form-control" type="hidden" id="board_id" name="board_id" value="<%=data.boardID%>"></input>
		<input class="form-control" type="hidden" id="board_name" name="board_name" value="<%=data.boardName%>"></input>
    </div>
    <div class="form-group col-10 offset-1">
        <button class="btn btn-dark" type="submit">Post</button>
    </div>
</form>
